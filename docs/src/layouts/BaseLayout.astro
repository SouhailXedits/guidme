---
import Analytics from "../components/Analytics/Analytics.astro";
export interface Props {
	title: string;
}

export interface BaseLayoutProps extends Props {
	permalink?: string;
	title?: string;
	description?: string;
}

const { permalink = '', title = "guidme", description = "A light-weight, no-dependency, vanilla JavaScript library to drive user's focus across the page." } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />

		<title>{ title }</title>
		<meta name="robots" content="index,follow"/>
		<meta name="description" itemprop="description" content={description}/>

		<link href={`https://guidme.com${permalink}`} rel="canonical">

		<meta content="Kamran Ahmed" name=author>
		<meta content="summary_large_image" name="twitter:card">
		<meta content="@kamrify" name="twitter:creator">
		<meta content="1200" property="og:image:width">
		<meta content="630" property="og:image:height">
		<meta content="https://guidme.com/og-img.png" property="og:image">
		<meta content="guidme.com" property="og:image:alt">
		<meta content="guidme.com" property="og:site_name">
		<meta content="guidme" property="og:title">
		<meta content="A light-weight, no-dependency, vanilla JavaScript library to drive user's focus across the page." property=og:description>
		<meta content="website" property="og:type">
		<meta content="https://guidme.com/" property="og:url">

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<style is:global>
			.guidme-popover.guidme-theme {
				background-color: #fde047;
				color: #000;
			}

			.guidme-popover.guidme-theme .guidme-popover-title {
				font-size: 20px;
			}

			.guidme-popover.guidme-theme .guidme-popover-title,
			.guidme-popover.guidme-theme .guidme-popover-description,
			.guidme-popover.guidme-theme .guidme-popover-progress-text {
				color: #000;
			}

			.guidme-popover.guidme-theme button {
				flex: 1;
				text-align: center;
				background-color: #000;
				color: #ffffff;
				border: 2px solid #000;
				text-shadow: none;
				font-size: 14px;
				padding: 5px 8px;
				border-radius: 6px;
			}

			.guidme-popover.guidme-theme button:focus, .guidme-popover.guidme-theme button:hover {
				background-color: #424242;
				color: #ffffff;
			}

			.guidme-popover.guidme-theme .guidme-popover-navigation-btns {
				justify-content: space-between;
				gap: 3px;
			}

			.guidme-popover.guidme-theme .guidme-popover-close-btn {
				color: #9b9b9b;
			}

			.guidme-popover.guidme-theme .guidme-popover-close-btn:hover {
				color: #000;
			}

			.guidme-popover.guidme-theme .guidme-popover-arrow-side-left.guidme-popover-arrow {
				border-left-color: #fde047;
			}

			.guidme-popover.guidme-theme .guidme-popover-arrow-side-right.guidme-popover-arrow {
				border-right-color: #fde047;
			}

			.guidme-popover.guidme-theme .guidme-popover-arrow-side-top.guidme-popover-arrow {
				border-top-color: #fde047;
			}

			.guidme-popover.guidme-theme .guidme-popover-arrow-side-bottom.guidme-popover-arrow {
				border-bottom-color: #fde047;
			}
		</style>
	</head>
	<body>
		<slot />
        <Analytics />
	</body>
</html>